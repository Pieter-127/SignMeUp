<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.SignUp">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Subheading">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="MainHeading">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="InputComponent" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_background_drawable</item>
        <item name="android:padding">@dimen/spacing_micro</item>
    </style>

</resources>